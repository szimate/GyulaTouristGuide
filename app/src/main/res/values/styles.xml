<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="basic">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="medium">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="medium_middle" parent="medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="home">
        <item name="android:text">@string/gyula</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/home</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/five0_sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
